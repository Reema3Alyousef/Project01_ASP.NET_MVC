@{
    var e = (EntertainmentModel)ViewData["ent"];

}
<div class="card align-item-center" style="width:60%; margin-left:230px">
    <div class="card-body">
        <h5 class="card-title">@e.name</h5>
        <p class="card-text">@e.description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Location: @e.location</li>
    </ul>
    <img class="card-img-bottom" src="@e.image" alt="restaurant image">
</div>